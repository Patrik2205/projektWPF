<Window x:Class="projektWPF.CustomMessageBox"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="CustomMessageBox" Height="150" Width="300">
    <Grid>
        <TextBlock x:Name="MessageTextBlock" HorizontalAlignment="Center" VerticalAlignment="Top" TextWrapping="Wrap" Margin="0,46,0,0"/>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="0,20,0,0">
            <Button x:Name="RestartButton" Content="Restart" Width="100" Margin="10" Click="RestartButton_Click"/>
            <Button x:Name="QuitButton" Content="Quit" Width="100" Margin="10" Click="QuitButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
