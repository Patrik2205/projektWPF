<!-- MainWindow.xaml -->
<Window x:Class="projektWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Boulder Dash" Height="600" Width="800"
        KeyDown="Window_KeyDown">
    <Grid>
        <DockPanel>
            <StackPanel DockPanel.Dock="Top" Orientation="Horizontal" Background="Black">
                <TextBlock Name="ScoreTextBlock" Text="Score: 0" Foreground="White" FontSize="20" Margin="10"/>
            </StackPanel>
            <Canvas Name="GameCanvas" Background="Black" />
        </DockPanel>
    </Grid>
</Window>
